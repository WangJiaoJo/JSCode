<div class="row"> 
    <div class="col-sm-12">
        <form id="new-note-form" method="post" action="note_ajax.js">
            <label for="new-title">Title</label>
            <input type="text" id="new-title" name="new-title" placeholder="Title for Notes" ><br>
            <div id="error-title"></div><br>
            <label for="new-due">Due Date</label>
            <input type="text" id="new-due" name="new-date" placeholder="YYYY-MM-DD" ><br>
            <div id="error-due"></div><br>
            <label for="new-summary">Summary</label> 
            <textarea id="new-summary" name="new-summary" placeholder="Short summary for notes"></textarea><br>
            <div id="error-summary"></div><br>
            <label for="new-body">Body</label>
            <textarea id="new-body" name="new-body" placeholder="Enrich your notes"></textarea><br>
            <div id="error-body"></div><br>
            <input id="add-button" type="submit" value="Add">
        </form>
    </div>
</div>


